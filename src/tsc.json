{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "sourceMap": false,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "rootDir": "${configDir}/src",
        "outDir": "${configDir}/dist",
        "tsBuildInfoFile": "${configDir}/dist/.tsbuildinfo"
    },
    "include": ["${configDir}/src"]
}
